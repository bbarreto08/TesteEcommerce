@model WebEcommerce.Models.Produto

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Produto</h2>

@using (Html.BeginForm())
{
    if (!string.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <div class="alert alert-danger text-center">
            @ViewBag.errorMessage
        </div>
    }

    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success text-center">
            @ViewBag.Message
        </div>
    }

    <div class="card card-register mx-auto mt-5">
        <div class="card-header">Cadastre a nova categoria</div>
        <div class="card-body">
            <div class="form-group">

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("Nome")
                        @Html.EditorFor(model => model.produto_nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.produto_nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">                    
                    <div class="col-md-12">
                        @Html.Label("Descricao")
                        @Html.EditorFor(model => model.produto_desc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.produto_desc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Label("Ativo")
                        @Html.EditorFor(model => model.produto_ativo)
                        @Html.ValidationMessageFor(model => model.produto_ativo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">                    
                    <div class="col-md-12">
                        @Html.Label("Preco")
                        @Html.EditorFor(model => model.produto_preco, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.produto_preco, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <input type="submit" value="Confirmar" class="btn btn-primary " />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

}
